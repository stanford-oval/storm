# STORM UI Backend Environment Configuration
# Copy this file to .env and fill in your API keys

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true
LOG_LEVEL=info

# Language Model API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Azure OpenAI Configuration (if using Azure)
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Search/Retrieval API Keys
BING_SEARCH_API_KEY=your-bing-search-api-key
YDC_API_KEY=your-you-com-api-key
TAVILY_API_KEY=your-tavily-api-key
SERPER_API_KEY=your-serper-google-search-key
BRAVE_API_KEY=your-brave-search-api-key

# Optional: Vector Database (for VectorRM)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key

# Optional: Custom Storage Path
# STORM_PROJECTS_PATH=./storm-projects